<p id="notice"><%= notice %></p>

<h1>Listing Distributors</h1>

<table border="1">
  <thead>
    <tr>
      <th>Distributor Id</th>
      <th>Distributor Name</th>
      <th>Address</th>
      <th>Phone1</th>
      <th>Phone2</th>
      <th>Email</th>
      <th>Fax</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
  <% if @distributors.count==0%>
    <tr>
      <td colspan="8">Tidak ada data yang terdaftar</td>
    </tr>
  <% else %>
    <% @distributors.each do |distributor| %>
      <tr>
        <td><%= distributor.distributor_id %></td>
        <td><%= distributor.distributor_name %></td>
        <td><%= distributor.address %></td>
        <td><%= distributor.phone1 %></td>
        <td><%= distributor.phone2 %></td>
        <td><%= distributor.email %></td>
        <td><%= distributor.fax %></td>
        <td><%= link_to 'Show', distributor %></td>
        <td><%= link_to 'Edit', edit_distributor_path(distributor) %></td>
        <td><%= link_to 'Destroy', distributor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Distributor', new_distributor_path %><br/>
<%= link_to 'Employee', Employee %><br/>
<%= link_to 'Warehouse', Warehouse %><br/>
<% if current_user.role=="admin" %>
    <%= link_to 'User', User %><br/>
  <% end %>
